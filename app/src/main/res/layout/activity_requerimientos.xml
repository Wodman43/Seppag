<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_requerimientos">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="133dp"
        android:layout_height="130dp"


        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/nombre_de_usuario"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="503dp"


        android:layout_marginBottom="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:background="@drawable/cvw_requerimientos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mezclas_realizadas"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="32dp"
                android:textSize="22dp"
                android:textColor="@color/verde"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cdvw_pollo"
                android:layout_width="296dp"
                android:layout_height="60dp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="32dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cvw_mezclas"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mezcla pollo de engorde"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/grisletra"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_flecha"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="39.5dp"/>
                </LinearLayout>


                
                
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdvw_vaca"
                android:layout_width="296dp"
                android:layout_height="60dp"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="32dp"></androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cvw_mezclas"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mezcla vaca lechera"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/grisletra"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="9dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_flecha"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="39.3dp"/>
                </LinearLayout>

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </ListView>





        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>